<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="list_item">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>

    </style>
    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="android:textColor">@color/txt_chip_state_list</item>
    </style>
    <style name="list_details_title">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            bold
        </item>

    </style>
    <style name="list_details_body">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            normal
        </item>

    </style>
</resources>